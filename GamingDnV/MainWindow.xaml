                                    Height="30"
                                    BorderBrush="#2A72E9"
                                    BorderThickness="3"
                                    Background="#12131A"
                                    Foreground="#2A72E9"
                                    Margin="0 0 3 3"
                                    Command="{Binding ShowWindow}"/>
