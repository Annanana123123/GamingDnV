                <DataGrid Grid.Row="0"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Background="#12131A"
                          x:Name="GridUser"
                          ItemsSource="{Binding HerosTable}"
                          AutoGenerateColumns="False"
                          ScrollViewer.CanContentScroll="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          IsReadOnly="false"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                          GridLinesVisibility="all"
                          VerticalGridLinesBrush="#32323d"
                          SelectedItem="{Binding CurrentUser}"
                          RowEditEnding="GridUser_RowEditEnding"
                          FontSize="20">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGrid}}" TargetType="{x:Type DataGrid}">
                            <Setter Property="HeadersVisibility" Value="Column" />
                        </Style>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#1C1C25" />
                            <Setter Property="Foreground" Value="#888888"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="#32323d"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                        <Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="{x:Type DataGridRow}">
                            <Setter Property="Background" Value="#12131A"/>
                            <Setter Property="Foreground" Value="#999999"/>
                            <Setter Property="BorderBrush" Value="#32323d"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                        <Style x:Key="NameCellStyle" TargetType="{x:Type DataGridCell}">
                            <Style.Setters>
                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                            </Style.Setters>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя" Width="auto" Binding="{Binding HeroName}"/>
                        <DataGridTextColumn Header="Игрок" Width="*" Binding="{Binding UserName}"/>
                        <DataGridTextColumn Header="DF" Width="35" Binding="{Binding Defence}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="HP" Width="35" Binding="{Binding Health}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="СИ" Width="35" Binding="{Binding Power}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="ЛО" Width="35" Binding="{Binding Dexterity}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="ВЫ" Width="35" Binding="{Binding Endurance}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="МУ" Width="35" Binding="{Binding Wisdom}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="ИН" Width="35" Binding="{Binding Intelligence}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="ХА" Width="35" Binding="{Binding Charisma}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="ПА" Width="35" Binding="{Binding Passiv}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="AT" Width="35" Binding="{Binding Atac, Mode=TwoWay}" CellStyle="{StaticResource NameCellStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
