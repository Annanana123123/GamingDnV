<Window x:Class="GamingDnV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamingDnV"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized"
        Width="1920" Height="1080"
        WindowStyle="None">
    <!--WindowState="Maximized"-->
    <Window.InputBindings>
        <KeyBinding Command="{Binding Push1Btn}" Key="NumPad1"/>
        <KeyBinding Command="{Binding Push2Btn}" Key="NumPad2"/>
        <KeyBinding Command="{Binding Push3Btn}" Key="NumPad3"/>
        <KeyBinding Command="{Binding Push4Btn}" Key="NumPad4"/>
        <KeyBinding Command="{Binding Push5Btn}" Key="NumPad5"/>
        <KeyBinding Command="{Binding Push6Btn}" Key="NumPad6"/>
        <KeyBinding Command="{Binding Push7Btn}" Key="NumPad7"/>
        <KeyBinding Command="{Binding Push8Btn}" Key="NumPad8"/>
        <KeyBinding Command="{Binding Push9Btn}" Key="NumPad9"/>
        <KeyBinding Command="{Binding Push0Btn}" Key="NumPad0"/>
        <KeyBinding Command="{Binding PushDivideBtn}" Key="Divide"/>
        <KeyBinding Command="{Binding PushMultiplyBtn}" Key="Multiply"/>
        <KeyBinding Command="{Binding PushSubtractBtn}" Key="Subtract"/>
        <KeyBinding Command="{Binding PushAddBtn}" Key="Add"/>
        <KeyBinding Command="{Binding PushDeleteBtn}" Key="Delete"/>
    </Window.InputBindings>
    <Window.Resources>
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="{x:Type ToggleButton}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border
                  x:Name="Border" 
                  Grid.ColumnSpan="2"
                  CornerRadius="0"
                  Background="#2A72E9"
                  BorderBrush="#2A72E9"
                  BorderThickness="1" />
                <Border 
                  Grid.Column="0"
                  CornerRadius="0" 
                  Margin="1" 
                  Background="#1C1C25" 
                  BorderBrush="#1C1C25"
                  BorderThickness="0,0,0,0" />
                <Path 
                  x:Name="Arrow"
                  Grid.Column="1"     
                  Fill="White"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
                />
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="{x:Type TextBox}">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="{TemplateBinding Background}" />
        </ControlTemplate>

        <Style x:Key="{x:Type ComboBox}" TargetType="{x:Type ComboBox}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton 
                            Name="ToggleButton" 
                            Template="{StaticResource ComboBoxToggleButton}" 
                            Grid.Column="2" 
                            Focusable="false"
                            IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                            ClickMode="Press">
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}"
                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                            Margin="3,3,23,3"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left" />
                            <TextBox x:Name="PART_EditableTextBox"
                            Style="{x:Null}" 
                            Template="{StaticResource ComboBoxTextBox}" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            Margin="3,3,23,3"
                            Focusable="True" 
                            Background="#1C1C25"
                            Foreground="Green"
                            Visibility="Hidden"
                            IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup 
                            Name="Popup"
                            Placement="Bottom"
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            AllowsTransparency="True" 
                            Focusable="False"
                            PopupAnimation="Slide">

                                <Grid Name="DropDown"
                              SnapsToDevicePixels="True"                
                              MinWidth="{TemplateBinding ActualWidth}"
                              MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border 
                                x:Name="DropDownBorder"
                                Background="#1C1C25"

                                BorderThickness="1"
                                BorderBrush="#2A72E9"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger SourceName="Popup" Property="Popup.AllowsTransparency" Value="true">
                                <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="0"/>
                                <Setter TargetName="DropDownBorder" Property="Margin" Value="0,2,0,0"/>
                            </Trigger>
                            <Trigger Property="IsEditable"  Value="true">
                                <Setter Property="IsTabStop" Value="false"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
            </Style.Triggers>
        </Style>

        <!-- SimpleStyles: ComboBoxItem -->
        <Style x:Key="{x:Type ComboBoxItem}" TargetType="{x:Type ComboBoxItem}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                        <Border Name="Border"
                              Padding="2"
                              SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="#FF4F4F4F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#12131A">
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Border Background="#1C1C25"
                Grid.Column="3"
                Grid.Row="1"/>
        <DataGrid Grid.Row="1"
                  Grid.Column="1"
                  Background="#12131A"
                  x:Name="GridUser"
                  ItemsSource="{Binding HerosTable}"
                  AutoGenerateColumns="False"
                  ScrollViewer.CanContentScroll="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  IsReadOnly="false"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                  GridLinesVisibility="all"
                  VerticalGridLinesBrush="#32323d"
                  SelectedItem="{Binding CurrentUser}"
                  RowEditEnding="GridUser_RowEditEnding"
                  FontSize="20">
            <DataGrid.Resources>
                <Style BasedOn="{StaticResource {x:Type DataGrid}}" TargetType="{x:Type DataGrid}">
                    <Setter Property="HeadersVisibility" Value="Column" />
                </Style>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#1C1C25" />
                    <Setter Property="Foreground" Value="#888888"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="#32323d"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
                <Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="#12131A"/>
                    <Setter Property="Foreground" Value="#999999"/>
                    <Setter Property="BorderBrush" Value="#32323d"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
                <Style x:Key="NameCellStyle" TargetType="{x:Type DataGridCell}">
                    <Style.Setters>
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    </Style.Setters>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Width="auto" Binding="{Binding HeroName}"/>
                <DataGridTextColumn Header="Игрок" Width="*" Binding="{Binding UserName}"/>
                <DataGridTextColumn Header="DF" Width="35" Binding="{Binding Defence}" CellStyle="{StaticResource NameCellStyle}"/>
                <DataGridTextColumn Header="HP" Width="35" Binding="{Binding Health}" CellStyle="{StaticResource NameCellStyle}"/>
                <DataGridTextColumn Header="СИ" Width="35" Binding="{Binding Power}" CellStyle="{StaticResource NameCellStyle}"/>
                <DataGridTextColumn Header="ЛО" Width="35" Binding="{Binding Dexterity}" CellStyle="{StaticResource NameCellStyle}"/>
                <DataGridTextColumn Header="ВЫ" Width="35" Binding="{Binding Endurance}" CellStyle="{StaticResource NameCellStyle}"/>
                <DataGridTextColumn Header="МУ" Width="35" Binding="{Binding Wisdom}" CellStyle="{StaticResource NameCellStyle}"/>
                <DataGridTextColumn Header="ИН" Width="35" Binding="{Binding Intelligence}" CellStyle="{StaticResource NameCellStyle}"/>
                <DataGridTextColumn Header="ХА" Width="35" Binding="{Binding Charisma}" CellStyle="{StaticResource NameCellStyle}"/>
                <DataGridTextColumn Header="ПА" Width="35" Binding="{Binding Passiv}" CellStyle="{StaticResource NameCellStyle}"/>
                <DataGridTextColumn Header="AT" Width="35" Binding="{Binding Atac, Mode=TwoWay}" CellStyle="{StaticResource NameCellStyle}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Column="3"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Margin="10" Source="{Binding UserIcon}"/>
            <ScrollViewer Grid.Column="1"
                                  Grid.RowSpan="2">
                <ScrollViewer.Resources>
                    <Style BasedOn="{StaticResource {x:Type ScrollBar}}" TargetType="{x:Type ScrollBar}">
                        <Setter Property="Opacity" Value="0"/>
                    </Style>
                </ScrollViewer.Resources>
                <TextBlock Text="{Binding UserInfo}"
                               Foreground="#999999"
                               FontSize="20"
                               TextWrapping="Wrap"
                               Margin="10"
                               ScrollViewer.CanContentScroll="True"/>
            </ScrollViewer>
            <Button Content="Бой"
                    FontSize="20"
                    Grid.Row="1"
                    Grid.Column="0"
                    Height="70"
                    VerticalAlignment="Top"
                    Background="#1C1C25"
                    BorderBrush="#2A72E9"
                    BorderThickness="2"
                    HorizontalContentAlignment="Center"
                    Foreground="#2A72E9"
                    Margin="20"
                    Command="{Binding IntoBattleL}"/>
            <Button Content="Печать"
                    FontSize="20"
                    Grid.Row="1"
                    Height="70"
                    Grid.Column="0"
                    Background="#1C1C25"
                    BorderBrush="#2A72E9"
                    BorderThickness="2"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Center"
                    Foreground="#2A72E9"
                    Margin="20"
                    Command="{Binding IntoBattlePrint}"/>
        </Grid>
        <Grid Grid.Column="5"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <Button Content="1" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B1}"/>
                    <Button Content="2" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B2}"/>
                    <Button Content="3" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B3}"/>
                    <Button Content="4" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B4}"/>
                    <Button Content="5" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B5}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="6" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B6}"/>
                    <Button Content="7" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B7}"/>
                    <Button Content="8" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B8}"/>
                    <Button Content="9" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B9}"/>
                    <Button Content="10" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B10}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="11" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B11}"/>
                    <Button Content="12" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B12}"/>
                    <Button Content="13" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B13}"/>
                    <Button Content="14" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B14}"/>
                    <Button Content="15" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B15}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="16" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B16}"/>
                    <Button Content="17" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B17}"/>
                    <Button Content="18" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B18}"/>
                    <Button Content="19" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B19}"/>
                    <Button Content="20" FontSize="18" Margin="0 0 3 3" Width="35" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding B20}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Защита" FontSize="15" Margin="0 0 3 3" Width="88" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding ResultDefence}"/>
                    <Button Content="|" FontSize="15" Margin="0 0 3 3" Width="30" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding ResultHealth1}"/>
                    <Button Content="|||" FontSize="15" Margin="0 0 3 3" Width="30" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding ResultHealth2}"/>
                    <Button Content="." FontSize="15" Margin="0 0 3 3" Width="30" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding ResultHealth3}"/>
                </StackPanel>
                <StackPanel>
                    <Button Content="Очистить" 
                                        Width="187"
                                        Height="35"
                                        FontSize="15"
                                        BorderBrush="#2A72E9"
                                        BorderThickness="3"
                                        Background="#12131A"
                                        Foreground="#2A72E9"
                                        Margin="0 0 3 3"
                                        Command="{Binding ClianTextBox}"/>
                    <Button Content="Логотип" 
                                        Width="187"
                                        Height="35"
                                        FontSize="15"
                                        BorderBrush="#2A72E9"
                                        BorderThickness="3"
                                        Background="#12131A"
                                        Foreground="#2A72E9"
                                        Margin="0 0 3 3"
                                        Command="{Binding Logo}"/>
                    <Button Content="{Binding ViewBattle}" 
                                        Width="187"
                                        Height="35"
                                        FontSize="15"
                                        BorderBrush="#2A72E9"
                                        BorderThickness="3"
                                        Background="#12131A"
                                        Foreground="#2A72E9"
                                        Margin="0 0 3 3"
                                        Command="{Binding ShowWindow}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Button Content="СИЛА" Margin="0 0 0 3" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding Power}"/>
                <Button Content="ЛОВКИСТЬ" Margin="0 0 0 3" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding Dexterity}"/>
                <Button Content="ВЫНОСЛИВОСТЬ" Margin="0 0 0 3" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding Endurance}"/>
                <Button Content="МУДРОСТЬ" Margin="0 0 0 3" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding Wisdom}"/>
                <Button Content="ИНТЕЛЕКТ" Margin="0 0 0 3" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding Intelligence}"/>
                <Button Content="ХАРИЗМА" Margin="0 0 0 3" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding Charisma}"/>
                <Button Content="{Binding TextButton}" Margin="0 0 0 3" Height="35" BorderBrush="#2A72E9" BorderThickness="3" Background="#12131A" Foreground="#2A72E9"
                                Command="{Binding NPCStep}"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="3"
                  Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="#1C1C25"
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="2">
            </Border>
            <Grid Grid.Column="0"
                      Grid.Row="0" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Image Margin="10" 
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Grid.Row="0"
                           Grid.RowSpan="2"
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Top" 
                           Width="200"
                           ToolTip="{Binding TollTipNPS}"
                           Source="{Binding ImageInfo}"/>
                <TextBox Margin="10"
                         Grid.Row="0"
                         IsReadOnly="True"
                         Width="50"
                         Height="50"
                         Background="#1C1C25"
                         Text="{Binding HP}"
                         Foreground="#ffffff"
                         FontSize="20"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Top"/>
            </Grid>
            <ScrollViewer Grid.Column="0" 
                              Grid.Row="1"
                              Grid.ColumnSpan="2">
                <ScrollViewer.Resources>
                    <Style BasedOn="{StaticResource {x:Type ScrollBar}}" TargetType="{x:Type ScrollBar}">
                        <Setter Property="Opacity" Value="0"/>
                    </Style>
                </ScrollViewer.Resources>
                <TextBlock Text="{Binding TextNPC}"
                               FontSize="15"
                               Margin="10"
                               TextWrapping="Wrap"
                               Background="#1C1C25"
                               Foreground="#2A72E9"
                               ScrollViewer.CanContentScroll="True"/>
            </ScrollViewer>
            <Grid Grid.Row="0"
                      Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0"
                                Grid.Column="1">


                    <Button Content="{Binding ViewImagText}"
                            FontSize="20"
                            Background="#1C1C25"
                            BorderBrush="#2A72E9"
                            BorderThickness="2"
                            HorizontalContentAlignment="Center"
                            Foreground="#2A72E9"
                            Margin="0 10 10 5"
                            Command="{Binding ViewImag}"/>
                    <Button Content="Информация"
                            FontSize="20"
                            Background="#1C1C25"
                            BorderBrush="#2A72E9"
                            BorderThickness="2"
                            Margin="0 0 10 0"
                            HorizontalContentAlignment="Center"
                            Foreground="#2A72E9"
                            Command="{Binding ViewInfo}"/>
                </StackPanel>
                <StackPanel Grid.Row="0"
                            Grid.Column="0">
                    <Button Content="Бой"
                            FontSize="20"
                            Grid.Row="0"
                            Grid.Column="0"
                            Background="#1C1C25"
                            BorderBrush="#2A72E9"
                            BorderThickness="2"
                            HorizontalContentAlignment="Center"
                            Foreground="#2A72E9"
                            Margin="0 10 5 5"
                            Command="{Binding IntoBattleR}"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Фон"
                                    FontSize="20"
                                    Width="50"
                                    Background="#1C1C25"
                                    BorderBrush="#2A72E9"
                                    BorderThickness="2"
                                    HorizontalContentAlignment="Center"
                                    Foreground="#2A72E9"
                                    Margin="0 0 5 0"
                                    IsEnabled="{Binding BackSEn}"
                                    Command="{Binding BackSound}"/>
                        <Button Content="Бой"
                                    FontSize="20"
                                    Width="50"
                                    Background="#1C1C25"
                                    BorderBrush="#2A72E9"
                                    BorderThickness="2"
                                    HorizontalContentAlignment="Center"
                                    Foreground="#2A72E9"
                                    Margin="0 0 5 0"
                                    IsEnabled="{Binding AtacSEn}"
                                    Command="{Binding AtacSound}"/>
                        <Button Content="Трек1"
                                    FontSize="20"
                                    Width="72"
                                    Background="#1C1C25"
                                    BorderBrush="#2A72E9"
                                    BorderThickness="2"
                                    HorizontalContentAlignment="Center"
                                    Foreground="#2A72E9"
                                    Margin="0 0 5 0"
                                    IsEnabled="{Binding TrackSEn}"
